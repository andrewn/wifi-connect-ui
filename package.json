{
  "private": true,
  "name": "wifi-connect-ui",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "npm run build:bundle && npm run build:config && npm run build:zip",
    "build:bundle": "preact build --production --no-prerender",
    "build:config": "cp src/config.json build/js/",
    "build:zip": "ln -s build ${npm_package_name}-${npm_package_version} && rm -f ${npm_package_name}-${npm_package_version}.zip && zip -r ${npm_package_name}-${npm_package_version}.zip ${npm_package_name}-${npm_package_version} && rm ${npm_package_name}-${npm_package_version}",
    "serve": "npm run build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest",
    "release": "release-it"
  },
  "eslintConfig": {
    "extends": "eslint-config-airbnb"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "babel-plugin-transform-runtime": "^6.23.0",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^16.1.0",
    "if-env": "^1.0.0",
    "jest": "^21.2.1",
    "preact-cli": "^2.0.0",
    "prettier-eslint": "^8.2.1",
    "release-it": "^5.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.5",
    "window-or-global": "^1.0.1"
  }
}
