{
  "private": true,
  "name": "wifi-connect-ui-preact",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --production --no-prerender",
    "serve": "npm run build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "eslint-config-airbnb"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "babel-plugin-transform-runtime": "^6.23.0",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^16.1.0",
    "if-env": "^1.0.0",
    "jest": "^21.2.1",
    "preact-cli": "^2.0.0",
    "prettier-eslint": "^8.2.1"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.5",
    "window-or-global": "^1.0.1"
  }
}
